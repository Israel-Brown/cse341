{
    "swagger": "2.0",
    "info": {
      "title": "Contact Management API",
      "description": "An API for managing contacts, including CRUD operations.",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/contacts": {
        "get": {
          "summary": "Get all contacts",
          "description": "Retrieve a list of all contacts from the database.",
          "responses": {
            "200": {
              "description": "OK - List of contacts retrieved successfully."
            },
            "500": {
              "description": "Internal Server Error - Unable to retrieve contacts."
            }
          }
        },
        "post": {
          "summary": "Create a new contact",
          "description": "Add a new contact to the database.",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string", "example": "John" },
                  "lastName": { "type": "string", "example": "Doe" },
                  "email": { "type": "string", "example": "john.doe@example.com" },
                  "favoriteColor": { "type": "string", "example": "Blue" },
                  "birthday": { "type": "string", "example": "1990-01-01" }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Created - Contact successfully created."
            },
            "500": {
              "description": "Internal Server Error - Unable to create contact."
            }
          }
        }
      },
      "/contacts/{id}": {
        "get": {
          "summary": "Get a single contact",
          "description": "Retrieve details of a specific contact by its ID.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The ID of the contact to retrieve."
            }
          ],
          "responses": {
            "200": {
              "description": "OK - Contact retrieved successfully."
            },
            "404": {
              "description": "Not Found - Contact not found."
            },
            "500": {
              "description": "Internal Server Error - Unable to retrieve contact."
            }
          }
        },
        "put": {
          "summary": "Update a contact",
          "description": "Update the details of a specific contact by its ID.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The ID of the contact to update."
            },
            {
              "name": "body",
              "in": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": { "type": "string", "example": "John" },
                  "lastName": { "type": "string", "example": "Smith" },
                  "email": { "type": "string", "example": "john.smith@example.com" },
                  "favoriteColor": { "type": "string", "example": "Red" },
                  "birthday": { "type": "string", "example": "1991-05-10" }
                }
              }
            }
          ],
          "responses": {
            "204": {
              "description": "No Content - Contact updated successfully."
            },
            "404": {
              "description": "Not Found - Contact not found."
            },
            "500": {
              "description": "Internal Server Error - Unable to update contact."
            }
          }
        },
        "delete": {
          "summary": "Delete a contact",
          "description": "Delete a specific contact by its ID.",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string",
              "description": "The ID of the contact to delete."
            }
          ],
          "responses": {
            "200": {
              "description": "OK - Contact deleted successfully."
            },
            "404": {
              "description": "Not Found - Contact not found."
            },
            "500": {
              "description": "Internal Server Error - Unable to delete contact."
            }
          }
        }
      }
    }
  }
  